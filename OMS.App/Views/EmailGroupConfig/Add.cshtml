@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="main">
    <div class="main_edit">
        <form id="subform" method="post">
            <table class="table">
                <tbody>
                    <tr>
                        <th>
                            <span class="color_danger">*</span>邮件组名：
                        </th>
                        <td>
                            <input name="GroupName" type="text" class="easyui-textbox input-xlarge" />
                        </td>
                    </tr>
                    <tr>
                        <th>
                            <span class="color_danger">*</span>邮件地址：
                        </th>
                        <td>
                            <div class="common-list">
                                <ul>
                                    <li>
                                        <i class="fa fa-close color_danger pointer" onclick="del_power($(this))"></i><input name="MailAddresses" type="text" value="" class="easyui-text input-large" />
                                    </li>
                                </ul>
                            </div>
                            <input id="add-button" type="button" value="添加邮件地址" class="btn btn-warning" />
                        </td>
                    </tr>
                    <tr>
                        <th>
                            备注：
                        </th>
                        <td>
                            <textarea name="Remark" class="easyui-textarea  input-xlarge" style="height:100px;"></textarea>
                        </td>
                    </tr>
                </tbody>
            </table>
        </form>
    </div>
</div>
@section scripts {
    <script type="text/javascript">
        $(function () {
            $('#add-button').bind('click', function () {
                $('.common-list').append('<li><i class="fa fa-close color_danger pointer" onclick="del_power($(this))"></i><input name="MailAddresses" type="text" class="easyui-text input-large" /></li>');
            });
        });

        function del_power(object) {
            $o = object.parent().remove();
        }
    </script>
}
